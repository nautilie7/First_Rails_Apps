
<div class="container">
	<div class="row">
		<div class="col-lg-12">
		<div class="page-header">
			<h1>Articles List</h1>
		</div>
		</div>		
	</div>
	<div class="row">
		<div class="col-lg-2">
		<%= link_to 'New article', new_article_path, class: "btn btn-success btn-block" %>
		</div>
		<div class="col-lg-10">
			<table class="table article-table">
				<tr>
					<th>Title</th>
					<th>Text</th>
					<th></th>
				</tr>
				<% @articles.each do |article| %>
				<tr>
					<td><%= article.title %></td>
					<td><%= truncate(article.text, :length => 50) %></td>
					<td class="text-right">
					<%= link_to 'Show', article_path(article), class: "btn btn-success btn-xs" %> | 
			    	<%= link_to 'Edit', edit_article_path(article), class: "btn btn-warning btn-xs" %> | 
			    	<%= link_to 'Destroy', article_path(article), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %>
			    	</td>
				</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>


